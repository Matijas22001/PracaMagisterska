<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|right">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="75px"
        android:layout_height="75px"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_home_bar_back"/>

    <Button
        android:id="@+id/btn_previous"
        android:layout_width="75px"
        android:layout_height="75px"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_home_bar_arrow_left"/>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="75px"
        android:layout_height="75px"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_home_bar_arrow_right"/>

    <Button
        android:id="@+id/btn_select"
        android:layout_width="75px"
        android:layout_height="75px"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_home_bar_select"/>

    <Button
        android:id="@+id/btn_test"
        android:layout_width="75px"
        android:layout_height="75px"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_home_bar_test"/>

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="150px"
        android:layout_height="75px"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_home_bar_menu"/>

</LinearLayout>

</FrameLayout>
